<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Календарь</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <div id="ModalWindow" class="modal">
        <div class="modal-content">
            <span class="closeModal">&times;</span>
            <div id="modalData"></div>
        </div>
    </div>

    <div class="calendar_header">
        <h1>Календарь</h1>
        <h2 id="monthYear"></h2>
    </div>

    <div class="calendar_buttons">
        <button id="prevBtn">&lt;</button>
        <button id="nextBtn">&gt;</button>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()      

        <div class="calendar">
            <table id="calendarTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Пн</th>
                        <th>Вт</th>
                        <th>Ср</th>
                        <th>Чт</th>
                        <th>Пт</th>
                        <th>Сб</th>
                        <th>Вс</th>
                    </tr>
                </thead>

                <tbody id="calendarBody"></tbody>

            </table>
        </div>
        </main>
    </div>

    

    <footer role="contentinfo" class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 -   <a href="https://github.com/Vaisero">Вайсеро Александр</a>
        </div>
    </footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/FillCalendar.js" type="text/javascript"></script>
    <script src="~/js/ModalWindowOnDays.js" type="text/javascript"></script>
    <script src="~/js/site.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>